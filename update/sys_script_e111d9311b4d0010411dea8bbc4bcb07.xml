        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// Create an object for the Occasion date
	var occDate = new GlideDate();
	occDate.setValue(current.getValue('u_occasion_date'));
	
	// parse month and day from the occasion date and set month and day field values
	var occMonth = occDate.getMonthNoTZ();
	current.setValue('occasion_month',occMonth);
	
	var occDay = occDate.getDayOfMonthNoTZ();
	current.setValue('occasion_day',occDay);

})(current, previous);]]></script>
